{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.vue", "src/**/*.js", "src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
